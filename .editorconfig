# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[ {*.js, *.json} ]
max_line_length = 100

[rules/*]
max_line_length = 1000

[*.md]
max_line_length = 250

[*.log]
max_line_length = 1000

[COMMIT_EDITMSG]
max_line_length = 80